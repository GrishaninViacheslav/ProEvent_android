<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/ProEvent_white">

    <ScrollView
        android:id="@+id/chat_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintBottom_toTopOf="@id/message_input_container"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/chat_bar"
        app:layout_constraintWidth_max="360dp">

        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="[18:00] Lorem: ipsum, Dolor!"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="[18:01] Dolor: ipsum, Lorem"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="[18:02] Lorem:  sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:text="[18:02] Dolor:  okay"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />
        </LinearLayout>
    </ScrollView>

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/ProEvent_blue_800_opacity_20"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/chat_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ProEvent_white"
        android:paddingTop="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_max="360dp">

        <TextView
            android:id="@+id/chat_name"
            fontPath="@string/default_font_bold_path"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="1"
            android:text="День молодежи. Общий чат"
            android:textColor="@color/ProEvent_blue_800"
            android:textSize="18sp"
            app:layout_constraintLeft_toRightOf="@id/back_hit_area"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:includeFontPadding="false"
            android:maxLines="2"
            android:text="13.08.2021 с 16.00 до 21.00"
            android:textColor="@color/ProEvent_blue_600"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="@id/chat_name"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/chat_name" />

        <ImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_back_to"
            app:layout_constraintBottom_toBottomOf="@id/chat_name"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/chat_name" />

        <View
            android:id="@+id/back_hit_area"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/back"
            app:layout_constraintLeft_toLeftOf="@id/back"
            app:layout_constraintRight_toRightOf="@id/back"
            app:layout_constraintTop_toTopOf="@id/back" />

        <View
            android:id="@+id/separator_top"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/ProEvent_blue_600"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/event_date" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/message_input_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/ProEvent_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_max="360dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/attach_options"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/separator_bottom">

            <TextView
                android:id="@+id/attach_survey"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/attach_survey"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/attach_file"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/attach_file"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/attach_location"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:paddingHorizontal="20dp"
                android:text="@string/attach_location"
                android:textColor="@color/ProEvent_blue_800"
                android:textSize="16sp" />
        </LinearLayout>

        <View
            android:id="@+id/separator_bottom"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginBottom="15dp"
            android:background="@color/ProEvent_blue_600"
            app:layout_constraintBottom_toTopOf="@id/message_edit"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:id="@+id/attach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="15dp"
            android:src="@drawable/ic_attach"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent" />

        <View
            android:id="@+id/attach_hit_area"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintBottom_toBottomOf="@id/attach"
            app:layout_constraintLeft_toLeftOf="@id/attach"
            app:layout_constraintRight_toRightOf="@id/attach"
            app:layout_constraintTop_toTopOf="@id/attach" />

        <ru.myproevent.ui.views.KeyboardAwareTextInputEditText
            android:id="@+id/message_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:background="@null"
            android:hint="@string/message_edit_hint"
            android:textColor="@color/ProEvent_blue_800"
            android:textColorHint="@color/ProEvent_blue_600"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/attach"
            app:layout_constraintRight_toRightOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>