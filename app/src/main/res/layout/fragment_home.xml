<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        fontPath="@string/default_font_bold_path"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:gravity="center_horizontal"
        android:paddingTop="40dp"
        android:text="@string/home_title"
        android:textColor="@color/PE_blue_gray_01"
        android:textSize="20sp"
        tools:ignore="MissingPrefix" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/token"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="200dp"
                android:gravity="center"
                android:textAlignment="center"
                tools:text="TOKEN\ndqdqwfhqluifqfhquhfuifhewuifhewfhuiwefhiwuhfuiewhfueiwhfuiwhfwufhwueihfwuehfiwhfuiwehfuewfhfueiwhfueiwhfwhui" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logout"
                fontPath="@string/default_font_bold_path"
                android:layout_width="320dp"
                android:layout_height="56dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/PE_peach_04"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:letterSpacing="0"
                android:text="Выйти"
                android:textAllCaps="false"
                android:textSize="20sp"
                android:layout_gravity="center"
                app:rippleColor="@color/PE_bright_red" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>